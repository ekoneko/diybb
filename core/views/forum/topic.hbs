{{!< ../layout}}
{{#content "pageStyles"}}
{{!-- page css --}}
{{/content}}
{{#content "pageScript"}}
<script src="/javascripts/forum/topic.js"></script>
<script src="/javascripts/forum/comment.js"></script>
{{/content}}
{{!-- content --}}
<div class="main">
    <div class="breadcrumbs">
        <a href="{{site.url}}">{{site.name}}</a>
        <i class="icon-chevron-right"></i>
        <a href="/channel/{{channel.id}}">{{channel.name}}</a>
        <i class="icon-chevron-right"></i>
        <a ng-href="/topic/{{post.id}}">{{post.title}}</a>
    </div>
    <div class="topic-panel">
        <h1 class="title">{{post.title}}</h1>
        <div class="author">
            <div class="avatar"><img src="/user/avatar/{{post.user_id}}" width="32" height="32"></div>
            <a class="name" href="/user/{{post.user_id}}" target="_blank">{{post.user_name}}</a>
            <div class="created">{{post.created}}</div>
        </div>
        <div class="content">{{{post.content}}}</div>
    </div>
    <div class="comment-panel" data-topic="{{post.id}}"></div>
</div>