{{!< ../layout}}
{{#content "pageStyles"}}
{{!-- page css --}}
{{/content}}
{{#content "pageScript"}}
<script src="/user_libraries/pagination/pagination.js"></script>
<script src="/javascripts/forum/channel.js"></script>
{{/content}}

<div class="main">
    <div class="breadcrumbs">
        <a href="{{siteurl}}">{{sitename}}</a>
        <i> &gt; </i>
        <a href="/channel/{{channel.id}}">{{channel.name}}</a>
    </div>
    <div class="channel-panel">
        <div class="control">
            <a class="button" href="/topic/add/{{channel.id}}">发布</a>
        </div>
        {{#each topics}}
        <div class="item">
            <a class="title" href="/topic/{{id}}">{{title}}</a>
            <div class="count">{{count}}</div>
            <div class="author">
                <a href="/user/{{user_id}}" target="_blank">{{user_name}}</a>
                <span class="created">{{created}}</span>
            </div>
            <div class="lastpost">
                <a href="/user/{{lastpost_user.id}}" target="_blank">{{lastpost_user.name}}</a>
                <div class="created">{{__ 'last post at %s' lastpost_time}}</div>
            </div>
        </div>
        {{/each}}
        <ul id="pagination" class="pagination" data-current="{{page}}" data-total="{{total}}" data-size="{{size}}" data-url="/channel/{{channel.id}}/"></ul>
    </div>
</div>